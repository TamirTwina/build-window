<% content_for :title do %>Mobile CI<% end %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="6" data-sizey="1">
      <div data-view="BigImage" data-image="https://www.dropbox.com/s/6gy2ocek6rpehzi/Houzz_Consumer_wide.png?dl=1"
        style="background-color:transparent;" data-max="true"></div>
    </li>
    <li data-row="1" data-col="7" data-sizex="6" data-sizey="1">
      <div data-view="BigImage" data-image="https://www.dropbox.com/s/5vw7bt6yo898lnv/Houzz_Pro_wide.png?dl=1"
        style="background-color:transparent;" data-max="true"></div>
    </li>
    <%
        num_cols = 12
        widget_size = 3
    %>
    <% Builds::BUILD_LIST.each_with_index do |build, index| %>
    <% build_num = index + 1 %>
    <li data-row="<%= build_num % num_cols == 0 ? build_num / num_cols + 1 : build_num / num_cols + 2 %>"
      data-col="<%= build_num % num_cols == 0 ? num_cols : build_num % num_cols %>" data-sizex="<%= widget_size %>"
      data-sizey="3">
      <div data-id="<%= build['id'] %>" data-server="<%= build['server'] %>" data-view="BuildWindow"></div>
    </li>
    <% end %>
  </ul>
</div>